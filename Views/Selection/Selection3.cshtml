@{
    Layout = null;
}
<!DOCTYPE html>


<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/js/my.js"></script>
    <style>
        * {
            box-sizing: border-box;
        }

        table {
            border-collapse: collapse;
            text-align: left;
            width: 100%;
            margin: auto;
        }

        th, td {
            border: 1px solid #cecfd5;
            padding: 10px 15px;
            height: 25px;
            max-height: 50px;
            text-align: left;
            width: 25%;
            font-weight: normal;
            vertical-align: top;
        }
    </style>
</head>
<body>
    <table border="1" style="width:100%;height:600px; font-family:Arial;">
        <tr @*style="height:15px"*@>
            <td>
                ID
            </td>
            <td>
                @ViewBag.Selection3
            </td>
            <td>
                Status
            </td>
            <td style="color:red">
                <div id="status">
                    <strong>@ViewBag.Selection3  Failed</strong>
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="4">
                Actual Result
            </td>

        </tr>
        <tr>
            <td colspan="4" style="width:100%;height:400px;">
                Send message: OK
                </br><br />
                Receive Ack: OK
                </br></br>
                Receive message: OK
                </br></br>
                All mandatory fields: Missing 2 fields
                </br></br>
                Validating fields:
                </br></br>
                Field ID 1 contains invalid info.
                </br></br>
                Field ID 2 is missing.
                </br></br>
                Field ID 5 is missing.
                </br></br>
            </td>
        </tr>

    </table>
</body>
</html>
